      "parent": null,
      "help": "./help/mark_titles.md"
    },
    "task": {
      "mode": "select",
      "tag": "title",
      "objective": "Mark titles",
      "guidance": "Draw rectangles around the titles of plays in the upcoming performance. Press the green tick to save. Mark additional performances on the same date. Please include any subtitles or alternative titles. Ignore song titles and past or future performances. Press Save when the page is done.",
      "classification": "http://purl.org/dc/terms/title"
    }
  },

